# Gym-Wale Admin System Environment Variables
# Copy this file to .env and update the values

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/gym-wale

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-make-it-very-long-and-random
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-make-it-different-from-jwt-secret

# Email Service Configuration (for 2FA and password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@gym-wale.com

# Frontend URL (for password reset links)
FRONTEND_URL=http://localhost:3000

# Security Configuration
NODE_ENV=development

# Optional: External Security Logging
SECURITY_LOG_WEBHOOK=
SECURITY_LOG_TOKEN=

# Server Configuration
PORT=3000

# Session Configuration
SESSION_TIMEOUT=1800000
# 1800000 = 30 minutes in milliseconds
# 3600000 = 1 hour in milliseconds
# 86400000 = 24 hours in milliseconds
